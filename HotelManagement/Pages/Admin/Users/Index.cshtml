@page
@model HotelManagement.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
        <a asp-page="/Admin/Dashboard" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Dashboard
        </a>
        <h1 class="text-4xl font-extrabold gradient-text">Manage Users</h1>
        <p class="text-gray-400 mt-2">View and manage all system users</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@Model.SuccessMessage</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
            <p class="text-red-400">@Model.ErrorMessage</p>
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Total Users</h3>
            <p class="text-3xl font-bold text-white">@Model.Users.Count</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Admins</h3>
            <p class="text-3xl font-bold text-purple-400">@Model.Users.Count(u => u.Role == "Admin")</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Hotel Admins</h3>
            <p class="text-3xl font-bold text-blue-400">@Model.Users.Count(u => u.Role == "HotelAdmin")</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Customers</h3>
            <p class="text-3xl font-bold text-green-400">@Model.Users.Count(u => u.Role == "Customer")</p>
        </div>
    </div>

    @if (Model.Users.Any())
    {
        <div class="glassmorphism rounded-xl p-8">
            <h2 class="text-2xl font-bold mb-6 text-white">All Users</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Username</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Email</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Role</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Hotel</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Joined</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Status</th>
                            <th class="text-center py-3 px-4 text-gray-400 font-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition-colors">
                                <td class="py-4 px-4 text-white font-medium">@user.Username</td>
                                <td class="py-4 px-4 text-gray-300">@user.Email</td>
                                <td class="py-4 px-4">
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="px-3 py-1 bg-purple-500/10 text-purple-400 rounded-full text-sm font-medium">Admin</span>
                                    }
                                    else if (user.Role == "HotelAdmin")
                                    {
                                        <span class="px-3 py-1 bg-blue-500/10 text-blue-400 rounded-full text-sm font-medium">Hotel Admin</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Customer</span>
                                    }
                                </td>
                                <td class="py-4 px-4 text-gray-300">
                                    @if (user.Hotel != null)
                                    {
                                        @user.Hotel.Name
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">-</span>
                                    }
                                </td>
                                <td class="py-4 px-4 text-gray-300">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="py-4 px-4">
                                    @if (user.IsActive)
                                    {
                                        <span class="px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">Inactive</span>
                                    }
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex items-center justify-center space-x-2">
                                        <!-- Change Role Dropdown -->
                                        <form method="post" asp-page-handler="ChangeRole" asp-route-userId="@user.UserId" class="inline">
                                            <select name="newRole" class="px-2 py-1 bg-gray-700 text-white text-xs rounded-lg focus:outline-none"
                                                    onchange="if(confirm('Change @user.Username role to ' + this.options[this.selectedIndex].text + '?')) this.form.submit();">
                                                <option value="">Change Role...</option>
                                                <option value="Customer">Customer</option>
                                                <option value="HotelAdmin">Hotel Admin</option>
                                                @if (User.Identity?.Name != user.Username)
                                                {
                                                    <option value="Admin">Admin</option>
                                                }
                                            </select>
                                        </form>

                                        <form method="post" asp-page-handler="ToggleActive" asp-route-userId="@user.UserId" class="inline">
                                            <button type="submit" 
                                                    class="px-3 py-2 @(user.IsActive ? "bg-yellow-600" : "bg-green-600") text-white text-sm font-medium rounded-lg hover:opacity-80 transition-colors">
                                                @(user.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                        @if (user.Role != "Admin")
                                        {
                                            <form method="post" asp-page-handler="Delete" asp-route-userId="@user.UserId" class="inline">
                                                <button type="submit" 
                                                        class="px-3 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors"
                                                        onclick="return confirm('Are you sure you want to delete user @user.Username?');">
                                                    Delete
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Users Found</h3>
            <p class="text-gray-400">There are no users in the system</p>
        </div>
    }
</div>


