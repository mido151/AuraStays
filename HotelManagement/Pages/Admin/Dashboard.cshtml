@page
@model HotelManagement.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-10">
        <h1 class="text-4xl font-extrabold mb-2">
            <span class="gradient-text">System Administration</span>
        </h1>
        <p class="text-gray-400">Overview of the entire hotel management system</p>
    </div>

    <!-- Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Total Hotels</h3>
                <div class="p-2 bg-purple-500/10 rounded-lg text-purple-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">@Model.TotalHotels</p>
            <span class="text-sm text-green-400 flex items-center mt-2">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Active properties
            </span>
        </div>

        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Total Rooms</h3>
                <div class="p-2 bg-blue-500/10 rounded-lg text-blue-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">@Model.TotalRooms</p>
            <span class="text-sm text-gray-400 mt-2 block">Across all hotels</span>
        </div>

        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Total Reservations</h3>
                <div class="p-2 bg-cyan-500/10 rounded-lg text-cyan-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">@Model.TotalReservations</p>
            <span class="text-sm text-gray-400 mt-2 block">All-time bookings</span>
        </div>

        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Registered Users</h3>
                <div class="p-2 bg-green-500/10 rounded-lg text-green-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">@Model.TotalUsers</p>
            <span class="text-sm text-gray-400 mt-2 block">System users</span>
        </div>

        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Total Revenue</h3>
                <div class="p-2 bg-emerald-500/10 rounded-lg text-emerald-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">$@Model.TotalRevenue.ToString("N0")</p>
            <span class="text-sm text-emerald-400 mt-2 block flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Completed payments
            </span>
        </div>

        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-400 font-medium">Pending Reviews</h3>
                <div class="p-2 bg-yellow-500/10 rounded-lg text-yellow-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-white">@Model.PendingReviews</p>
            <span class="text-sm text-yellow-400 mt-2 block">Awaiting approval</span>
        </div>
    </div>

    <!-- Quick Actions -->
    <h2 class="text-2xl font-bold mb-6">Administration</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a asp-page="/Admin/Hotels/Index" class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-indigo-600 to-purple-700 p-8 transition-all hover:shadow-2xl hover:scale-[1.02]">
            <div class="relative z-10">
                <h3 class="text-2xl font-bold text-white mb-2">Manage Hotels</h3>
                <p class="text-indigo-100">Add, edit, or remove hotels</p>
            </div>
            <svg class="absolute -bottom-4 -right-4 h-32 w-32 text-white/10 rotate-12 group-hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
        </a>

        <a asp-page="/Admin/Users/Index" class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-teal-600 to-emerald-700 p-8 transition-all hover:shadow-2xl hover:scale-[1.02]">
            <div class="relative z-10">
                <h3 class="text-2xl font-bold text-white mb-2">Manage Users</h3>
                <p class="text-teal-100">View and manage system users</p>
            </div>
            <svg class="absolute -bottom-4 -right-4 h-32 w-32 text-white/10 rotate-12 group-hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
        </a>

        <a asp-page="/Admin/Reviews/Index" class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-pink-600 to-rose-700 p-8 transition-all hover:shadow-2xl hover:scale-[1.02]">
            <div class="relative z-10">
                <h3 class="text-2xl font-bold text-white mb-2">Review Approval</h3>
                <p class="text-pink-100">Approve or reject reviews</p>
                @if (Model.PendingReviews > 0)
                {
                    <span class="inline-block mt-2 px-3 py-1 bg-white/20 rounded-full text-sm font-semibold">
                        @Model.PendingReviews pending
                    </span>
                }
            </div>
            <svg class="absolute -bottom-4 -right-4 h-32 w-32 text-white/10 rotate-12 group-hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
        </a>
    </div>

    <!-- System Info -->
    <div class="mt-12 glassmorphism rounded-xl p-8">
        <h2 class="text-2xl font-bold mb-6 gradient-text">System Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-800/50 rounded-lg p-4">
                <h3 class="text-gray-400 text-sm mb-1">Application Version</h3>
                <p class="text-white font-semibold">AuraStays v1.0.0</p>
            </div>
            <div class="bg-gray-800/50 rounded-lg p-4">
                <h3 class="text-gray-400 text-sm mb-1">Database Status</h3>
                <p class="text-green-400 font-semibold flex items-center">
                    <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
                    Connected
                </p>
            </div>
            <div class="bg-gray-800/50 rounded-lg p-4">
                <h3 class="text-gray-400 text-sm mb-1">Last System Update</h3>
                <p class="text-white font-semibold">@DateTime.Now.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="bg-gray-800/50 rounded-lg p-4">
                <h3 class="text-gray-400 text-sm mb-1">Active Sessions</h3>
                <p class="text-white font-semibold">View in User Management</p>
            </div>
        </div>
    </div>
</div>