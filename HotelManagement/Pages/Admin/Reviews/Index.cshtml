@page
@model HotelManagement.Pages.Admin.Reviews.IndexModel
@{
    ViewData["Title"] = "Review Management";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
        <a asp-page="/Admin/Dashboard" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Dashboard
        </a>
        <h1 class="text-4xl font-extrabold gradient-text">Review Management</h1>
        <p class="text-gray-400 mt-2">Approve or reject customer reviews</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@Model.SuccessMessage</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
            <p class="text-red-400">@Model.ErrorMessage</p>
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Total Reviews</h3>
            <p class="text-3xl font-bold text-white">@(Model.PendingReviews.Count + Model.ApprovedReviews.Count)</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-yellow-500 border-2">
            <h3 class="text-gray-400 font-medium mb-2">Pending Approval</h3>
            <p class="text-3xl font-bold text-yellow-400">@Model.PendingReviews.Count</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Approved</h3>
            <p class="text-3xl font-bold text-green-400">@Model.ApprovedReviews.Count</p>
        </div>
    </div>

    <!-- Pending Reviews Section -->
    @if (Model.PendingReviews.Any())
    {
        <div class="glassmorphism rounded-xl p-8 mb-8">
            <h2 class="text-2xl font-bold mb-6 text-white flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Pending Reviews (@Model.PendingReviews.Count)
            </h2>

            <div class="space-y-4">
                @foreach (var review in Model.PendingReviews)
                {
                    <div class="bg-gray-800/50 rounded-lg p-6 border border-yellow-500/30">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3 class="text-xl font-bold text-white">@review.Hotel.Name</h3>
                                <p class="text-gray-400">by @review.Guest.FirstName @review.Guest.LastName</p>
                                <p class="text-sm text-gray-500">@review.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                            <div class="flex items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    }
                                }
                            </div>
                        </div>

                        <p class="text-gray-300 mb-4">@review.Comment</p>

                        <div class="flex space-x-2">
                            <form method="post" asp-page-handler="Approve" asp-route-reviewId="@review.ReviewId" class="inline">
                                <button type="submit" 
                                        class="px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Approve
                                </button>
                            </form>
                            <form method="post" asp-page-handler="Reject" asp-route-reviewId="@review.ReviewId" class="inline">
                                <button type="submit" 
                                        class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors flex items-center"
                                        onclick="return confirm('Are you sure you want to reject this review? It will be permanently deleted.');">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                    Reject
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center mb-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Pending Reviews</h3>
            <p class="text-gray-400">All reviews have been processed</p>
        </div>
    }

    <!-- Approved Reviews Section -->
    @if (Model.ApprovedReviews.Any())
    {
        <div class="glassmorphism rounded-xl p-8">
            <h2 class="text-2xl font-bold mb-6 text-white flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Approved Reviews (@Model.ApprovedReviews.Count)
            </h2>

            <div class="space-y-4">
                @foreach (var review in Model.ApprovedReviews.Take(10))
                {
                    <div class="bg-gray-800/50 rounded-lg p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3 class="text-xl font-bold text-white">@review.Hotel.Name</h3>
                                <p class="text-gray-400">by @review.Guest.FirstName @review.Guest.LastName</p>
                                <p class="text-sm text-gray-500">@review.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>
                            <div class="flex items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    }
                                }
                            </div>
                        </div>

                        <p class="text-gray-300 mb-4">@review.Comment</p>

                        <form method="post" asp-page-handler="Delete" asp-route-reviewId="@review.ReviewId" class="inline">
                            <button type="submit" 
                                    class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors"
                                    onclick="return confirm('Are you sure you want to delete this review?');">
                                Delete
                            </button>
                        </form>
                    </div>
                }
            </div>

            @if (Model.ApprovedReviews.Count > 10)
            {
                <p class="text-center text-gray-400 mt-6">
                    Showing 10 of @Model.ApprovedReviews.Count approved reviews
                </p>
            }
        </div>
    }
</div>