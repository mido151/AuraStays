@page
@model HotelManagement.Pages.Admin.Hotels.IndexModel
@{
    ViewData["Title"] = "Manage Hotels";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex items-center justify-between mb-8">
        <div>
            <a asp-page="/Admin/Dashboard" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                Back to Dashboard
            </a>
            <h1 class="text-4xl font-extrabold gradient-text">Manage Hotels</h1>
        </div>
        <a asp-page="./Create" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
            + Add New Hotel
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@Model.SuccessMessage</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
            <p class="text-red-400">@Model.ErrorMessage</p>
        </div>
    }

    @if (Model.Hotels.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="glassmorphism rounded-xl overflow-hidden">
                    <img src="@(hotel.ImageUrl ?? "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800")" 
                         alt="@hotel.Name" 
                         class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-white mb-2">@hotel.Name</h3>
                        <p class="text-gray-400 mb-2">@hotel.City, @hotel.Country</p>
                        <p class="text-gray-500 text-sm mb-4">@hotel.Address</p>
                        
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <span class="ml-1 font-bold text-lg">@hotel.Rating.ToString("0.0")</span>
                            </div>
                            <span class="text-sm text-gray-400">@hotel.Rooms.Count rooms</span>
                        </div>

                        <div class="flex space-x-2">
                            <a asp-page="./Edit" asp-route-id="@hotel.HotelId" 
                               class="flex-1 text-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                Edit
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-hotelId="@hotel.HotelId" class="flex-1">
                                <button type="submit" 
                                        class="w-full px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors"
                                        onclick="return confirm('Are you sure you want to delete @hotel.Name? This will also delete all associated rooms, staff, and reservations.');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Hotels Yet</h3>
            <p class="text-gray-400 mb-6">Start by adding your first hotel</p>
            <a asp-page="./Create" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                + Add Your First Hotel
            </a>
        </div>
    }
</div>