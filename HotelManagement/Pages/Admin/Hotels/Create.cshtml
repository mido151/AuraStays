@page
@model HotelManagement.Pages.Admin.Hotels.CreateModel
@{
    ViewData["Title"] = "Add New Hotel";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
        <div class="mb-8">
            <a asp-page="./Index" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                Back to Hotels
            </a>
            <h1 class="text-4xl font-extrabold gradient-text">Add New Hotel</h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
                <p class="text-red-400">@Model.ErrorMessage</p>
            </div>
        }

        <div class="glassmorphism rounded-xl p-8">
            <form method="post" class="space-y-6">
                <div>
                    <label asp-for="Input.Name" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.Name" 
                           type="text" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="e.g., Grand Luxury Hotel" />
                    <span asp-validation-for="Input.Name" class="text-red-400 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.City" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.City" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., Paris" />
                        <span asp-validation-for="Input.City" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Country" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.Country" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., France" />
                        <span asp-validation-for="Input.Country" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Address" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.Address" 
                           type="text" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="e.g., 123 Main Street" />
                    <span asp-validation-for="Input.Address" class="text-red-400 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.PostalCode" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.PostalCode" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., 75001" />
                        <span asp-validation-for="Input.PostalCode" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Phone" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.Phone" 
                               type="tel" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., +33-1-23-45-67-89" />
                        <span asp-validation-for="Input.Phone" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Rating" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.Rating" 
                           type="number" 
                           step="0.1"
                           min="0"
                           max="5"
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" />
                    <span asp-validation-for="Input.Rating" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ImageUrl" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.ImageUrl" 
                           type="url" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="https://example.com/hotel-image.jpg" />
                    <span asp-validation-for="Input.ImageUrl" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Description" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <textarea asp-for="Input.Description" 
                              rows="4"
                              class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                              placeholder="Describe the hotel..."></textarea>
                    <span asp-validation-for="Input.Description" class="text-red-400 text-sm"></span>
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-gray-700">
                    <a asp-page="./Index" class="text-gray-400 hover:text-white transition-colors">Cancel</a>
                    <button type="submit" 
                            class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                        Create Hotel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}