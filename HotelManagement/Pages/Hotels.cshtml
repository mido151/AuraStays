@page
@model HotelManagement.Pages.HotelsModel
@{
    ViewData["Title"] = "Hotels";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-4">Find Your Perfect Stay</h1>
    <p class="text-center text-gray-400 mb-10 max-w-2xl mx-auto">Discover luxury hotels and resorts from around the world, tailored to your every need.</p>
    
    <div class="mb-8 max-w-lg mx-auto">
        <input id="hotel-search" type="text" placeholder="Search by hotel name or location..." class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-shadow">
    </div>

    <div id="hotel-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var hotel in Model.Hotels)
        {
            <div class="hotel-card card-hover-effect rounded-xl overflow-hidden bg-gray-800 shadow-lg" 
                 data-name="@hotel.Name" 
                 data-location="@hotel.City">
                <div class="relative">
                    <img src="@(hotel.ImageUrl ?? "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800")" alt="Hotel @hotel.Name" class="w-full h-56 object-cover">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <h3 class="text-2xl font-bold text-white">@hotel.Name</h3>
                        <p class="text-sm text-gray-300 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                            </svg>
                            @hotel.City, @hotel.Country
                        </p>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <span class="ml-1 font-bold text-lg">@hotel.Rating.ToString("0.0")</span>
                        </div>
                        <span class="text-xl font-semibold">@hotel.Rooms.Count <span class="text-sm font-normal text-gray-400">rooms</span></span>
                    </div>
                    <a asp-page="./Details" asp-route-id="@hotel.HotelId" class="block w-full text-center text-white font-bold py-3 px-4 rounded-lg bg-gradient-to-r from-purple-600 to-indigo-600 hover:opacity-90 transition-all duration-300 transform hover:scale-105">
                        View Details
                    </a>
                </div>
            </div>
        }
    </div>
</div>