@page
@model HotelManagement.Pages.HotelAdmin.Rooms.CreateModel
@{
    ViewData["Title"] = "Add New Room";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-2xl mx-auto">
        <div class="mb-8">
            <a asp-page="./Index" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                Back to Rooms
            </a>
            <h1 class="text-4xl font-extrabold gradient-text">Add New Room</h1>
            @if (Model.Hotel != null)
            {
                <p class="text-gray-400 mt-2">@Model.Hotel.Name</p>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
                <p class="text-red-400">@Model.ErrorMessage</p>
            </div>
        }

        <div class="glassmorphism rounded-xl p-8">
            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.RoomNumber" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.RoomNumber" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., 101, A-205" />
                        <span asp-validation-for="Input.RoomNumber" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.RoomType" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <select asp-for="Input.RoomType" 
                                class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white">
                            <option value="">Select type...</option>
                            <option value="Standard">Standard</option>
                            <option value="Deluxe">Deluxe</option>
                            <option value="Suite">Suite</option>
                            <option value="Penthouse">Penthouse</option>
                            <option value="Presidential Suite">Presidential Suite</option>
                        </select>
                        <span asp-validation-for="Input.RoomType" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.RoomPrice" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <div class="relative">
                            <span class="absolute left-4 top-3 text-gray-400">$</span>
                            <input asp-for="Input.RoomPrice" 
                                   type="number" 
                                   step="0.01"
                                   class="w-full pl-8 pr-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                                   placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Input.RoomPrice" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Capacity" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.Capacity" 
                               type="number" 
                               min="1"
                               max="20"
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="2" />
                        <span asp-validation-for="Input.Capacity" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Size" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <div class="relative">
                        <input asp-for="Input.Size" 
                               type="number" 
                               step="0.01"
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                               placeholder="e.g., 25.5" />
                        <span class="absolute right-4 top-3 text-gray-400">m²</span>
                    </div>
                    <span asp-validation-for="Input.Size" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ImageUrl" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.ImageUrl" 
                           type="url" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="https://example.com/room-image.jpg" />
                    <span asp-validation-for="Input.ImageUrl" class="text-red-400 text-sm"></span>
                    <p class="text-sm text-gray-500 mt-1">Optional: Add a URL to an image of the room</p>
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-gray-700">
                    <a asp-page="./Index" class="text-gray-400 hover:text-white transition-colors">Cancel</a>
                    <button type="submit" 
                            class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all transform hover:scale-105">
                        Create Room
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}