@page
@model HotelManagement.Pages.HotelAdmin.Rooms.IndexModel
@{
    ViewData["Title"] = "Manage Rooms";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-4xl font-extrabold gradient-text">Manage Rooms</h1>
            @if (Model.Hotel != null)
            {
                <p class="text-gray-400 mt-2">@Model.Hotel.Name</p>
            }
        </div>
        <a asp-page="./Create" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all transform hover:scale-105">
            + Add New Room
        </a>
    </div>

    @if (!string.IsNullOrEmpty((string?)TempData["SuccessMessage"]))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@TempData["SuccessMessage"]</p>
        </div>
    }

    @if (!string.IsNullOrEmpty((string?)TempData["ErrorMessage"]))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
            <p class="text-red-400">@TempData["ErrorMessage"]</p>
        </div>
    }

    @if (Model.Rooms.Any())
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">Total Rooms</h3>
                <p class="text-3xl font-bold text-white">@Model.Rooms.Count</p>
            </div>
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">Available</h3>
                <p class="text-3xl font-bold text-green-400">@Model.Rooms.Count(r => r.RoomStatus == "Available")</p>
            </div>
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">Occupied</h3>
                <p class="text-3xl font-bold text-red-400">@Model.Rooms.Count(r => r.RoomStatus == "Occupied")</p>
            </div>
        </div>

        <!-- Rooms Table -->
        <div class="glassmorphism rounded-xl p-8">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Room Number</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Type</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Price/Night</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Capacity</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Size</th>
                            <th class="text-left py-3 px-4 text-gray-400 font-medium">Status</th>
                            <th class="text-center py-3 px-4 text-gray-400 font-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model.Rooms.OrderBy(r => r.RoomNumber))
                        {
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition-colors">
                                <td class="py-4 px-4 text-cyan-400 font-semibold text-lg">@room.RoomNumber</td>
                                <td class="py-4 px-4 text-white">@room.RoomType</td>
                                <td class="py-4 px-4 text-white font-medium">$@room.RoomPrice.ToString("N2")</td>
                                <td class="py-4 px-4 text-gray-300">@(room.Capacity ?? 0) guests</td>
                                <td class="py-4 px-4 text-gray-300">@(room.Size?.ToString("N0") ?? "N/A") m²</td>
                                <td class="py-4 px-4">
                                    @if (room.RoomStatus == "Available")
                                    {
                                        <span class="px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Available</span>
                                    }
                                    else if (room.RoomStatus == "Occupied")
                                    {
                                        <span class="px-3 py-1 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">Occupied</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 bg-yellow-500/10 text-yellow-400 rounded-full text-sm font-medium">@room.RoomStatus</span>
                                    }
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex items-center justify-center space-x-2">
                                        <a asp-page="./Edit" asp-route-id="@room.RoomId" 
                                           class="px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
                                           title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        @if (room.RoomStatus == "Available")
                                        {
                                            <form method="post" asp-page-handler="Delete" asp-route-roomId="@room.RoomId" class="inline">
                                                <button type="submit" 
                                                        class="px-3 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors"
                                                        onclick="return confirm('Are you sure you want to delete room @room.RoomNumber?');"
                                                        title="Delete">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button type="button" 
                                                    class="px-3 py-2 bg-gray-600 text-gray-400 text-sm font-medium rounded-lg cursor-not-allowed"
                                                    disabled
                                                    title="Cannot delete occupied room">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Rooms Yet</h3>
            <p class="text-gray-400 mb-6">Start by adding your first room to your hotel</p>
            <a asp-page="./Create" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                + Add Your First Room
            </a>
        </div>
    }
</div>