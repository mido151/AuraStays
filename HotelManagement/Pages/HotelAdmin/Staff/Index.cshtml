@page
@model HotelManagement.Pages.HotelAdmin.Staff.IndexModel
@{
    ViewData["Title"] = "Manage Staff";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-4xl font-extrabold gradient-text">Manage Staff</h1>
        <a asp-page="./Create" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
            + Add Staff Member
        </a>
    </div>

    @if (!string.IsNullOrEmpty((string?)TempData["SuccessMessage"]))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@TempData["SuccessMessage"]</p>
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Total Staff</h3>
            <p class="text-3xl font-bold text-white">@Model.StaffMembers.Count</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Departments</h3>
            <p class="text-3xl font-bold text-white">@Model.Departments.Count</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
            <h3 class="text-gray-400 font-medium mb-2">Active Staff</h3>
            <p class="text-3xl font-bold text-green-400">@Model.StaffMembers.Count(s => s.IsActive)</p>
        </div>
    </div>

    @if (Model.StaffMembers.Any())
    {
        <!-- Staff by Department -->
        @foreach (var dept in Model.Departments)
        {
            var deptStaff = Model.StaffMembers.Where(s => s.DeptId == dept.DeptId).ToList();
            if (deptStaff.Any())
            {
                <div class="glassmorphism rounded-xl p-8 mb-6">
                    <h2 class="text-2xl font-bold mb-6 text-white flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        @dept.Name
                        <span class="ml-auto text-sm text-gray-400 font-normal">@deptStaff.Count members</span>
                    </h2>

                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b border-gray-700">
                                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Name</th>
                                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Position</th>
                                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Email</th>
                                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Salary</th>
                                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Status</th>
                                    <th class="text-center py-3 px-4 text-gray-400 font-medium">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var staff in deptStaff)
                                {
                                    <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition-colors">
                                        <td class="py-4 px-4 text-white font-medium">@staff.FirstName @staff.LastName</td>
                                        <td class="py-4 px-4 text-gray-300">@(staff.Position ?? "Not specified")</td>
                                        <td class="py-4 px-4 text-gray-300">@staff.Email</td>
                                        <td class="py-4 px-4 text-white font-medium">
                                            @if (staff.Salary.HasValue)
                                            {
                                                <text>$@staff.Salary.Value.ToString("N0")</text>
                                            }
                                            else
                                            {
                                                <text>N/A</text>
                                            }
                                        </td>
                                        <td class="py-4 px-4">
                                            @if (staff.IsActive)
                                            {
                                                <span class="px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Active</span>
                                            }
                                            else
                                            {
                                                <span class="px-3 py-1 bg-gray-500/10 text-gray-400 rounded-full text-sm font-medium">Inactive</span>
                                            }
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="flex items-center justify-center space-x-2">
                                                <a asp-page="./Edit" asp-route-id="@staff.StaffId" 
                                                   class="px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                                    Edit
                                                </a>
                                                <form method="post" asp-page-handler="Delete" asp-route-staffId="@staff.StaffId" class="inline">
                                                    <button type="submit" 
                                                            class="px-3 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors"
                                                            onclick="return confirm('Are you sure you want to delete this staff member?');">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
        }

        <!-- Staff without Department -->
        @{
            var noDeptStaff = Model.StaffMembers.Where(s => !s.DeptId.HasValue).ToList();
            if (noDeptStaff.Any())
            {
                <div class="glassmorphism rounded-xl p-8">
                    <h2 class="text-2xl font-bold mb-6 text-white">Unassigned Staff</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @foreach (var staff in noDeptStaff)
                        {
                            <div class="bg-gray-800/50 rounded-lg p-4 flex items-center justify-between">
                                <div>
                                    <h3 class="text-white font-semibold">@staff.FirstName @staff.LastName</h3>
                                    <p class="text-sm text-gray-400">@staff.Email</p>
                                </div>
                                <a asp-page="./Edit" asp-route-id="@staff.StaffId" class="text-indigo-400 hover:text-indigo-300">
                                    Assign →
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Staff Members Yet</h3>
            <p class="text-gray-400 mb-6">Start building your team</p>
            <a asp-page="./Create" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                + Add Your First Staff Member
            </a>
        </div>
    }
</div>