@page
@model HotelManagement.Pages.HotelAdmin.Staff.CreateModel
@{
    ViewData["Title"] = "Add Staff Member";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-2xl mx-auto">
        <div class="mb-8">
            <a asp-page="./Index" class="text-indigo-400 hover:text-indigo-300 font-medium flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                Back to Staff
            </a>
            <h1 class="text-4xl font-extrabold gradient-text">Add Staff Member</h1>
        </div>

        <div class="glassmorphism rounded-xl p-8">
            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                        <input asp-for="Input.FirstName" type="text" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" required />
                        <span asp-validation-for="Input.FirstName" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                        <input asp-for="Input.LastName" type="text" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" required />
                        <span asp-validation-for="Input.LastName" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                    <input asp-for="Input.Email" type="email" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" required />
                    <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.Position" class="block text-sm font-medium text-gray-300 mb-2">Position</label>
                        <input asp-for="Input.Position" type="text" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" placeholder="e.g., Receptionist" />
                        <span asp-validation-for="Input.Position" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.DeptId" class="block text-sm font-medium text-gray-300 mb-2">Department</label>
                        <select asp-for="Input.DeptId" asp-items="Model.Departments" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white">
                            <option value="">No department</option>
                        </select>
                        <span asp-validation-for="Input.DeptId" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label asp-for="Input.DOB" class="block text-sm font-medium text-gray-300 mb-2">Date of Birth</label>
                        <input asp-for="Input.DOB" type="date" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" />
                        <span asp-validation-for="Input.DOB" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Gender" class="block text-sm font-medium text-gray-300 mb-2">Gender</label>
                        <select asp-for="Input.Gender" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white">
                            <option value="">Prefer not to say</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Input.Gender" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Salary" class="block text-sm font-medium text-gray-300 mb-2">Salary</label>
                        <div class="relative">
                            <span class="absolute left-4 top-3 text-gray-400">$</span>
                            <input asp-for="Input.Salary" type="number" step="0.01" class="w-full pl-8 pr-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Input.Salary" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-gray-700">
                    <a asp-page="./Index" class="text-gray-400 hover:text-white transition-colors">Cancel</a>
                    <button type="submit" class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                        Add Staff Member
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}