@page
@model HotelManagement.Pages.Customer.BookRoomModel
@{
    ViewData["Title"] = "Book a Room";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-4 gradient-text">Book Your Stay</h1>
    <p class="text-center text-gray-400 mb-10 max-w-2xl mx-auto">Find the perfect room for your next adventure</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg max-w-3xl mx-auto">
            <p class="text-red-400">@Model.ErrorMessage</p>
        </div>
    }

    <!-- Search Form -->
    <div class="glassmorphism rounded-xl p-8 mb-8 max-w-3xl mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-white">Search Available Rooms</h2>
        <form method="post" asp-page-handler="Search">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="Input.HotelId" class="block text-sm font-medium text-gray-300 mb-2">Select Hotel</label>
                    <select asp-for="Input.HotelId" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white">
                        <option value="">Choose a hotel...</option>
                        @foreach (var hotel in Model.Hotels)
                        {
                            <option value="@hotel.HotelId">@hotel.Name - @hotel.City, @hotel.Country</option>
                        }
                    </select>
                    <span asp-validation-for="Input.HotelId" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.NumGuests" class="block text-sm font-medium text-gray-300 mb-2">Number of Guests</label>
                    <input asp-for="Input.NumGuests" type="number" min="1" max="20" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" />
                    <span asp-validation-for="Input.NumGuests" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.CheckInDate" class="block text-sm font-medium text-gray-300 mb-2">Check-In Date</label>
                    <input asp-for="Input.CheckInDate" type="date" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" />
                    <span asp-validation-for="Input.CheckInDate" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.CheckOutDate" class="block text-sm font-medium text-gray-300 mb-2">Check-Out Date</label>
                    <input asp-for="Input.CheckOutDate" type="date" class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white" />
                    <span asp-validation-for="Input.CheckOutDate" class="text-red-400 text-sm"></span>
                </div>
            </div>

            <button type="submit" class="w-full py-3 px-6 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                Search Available Rooms
            </button>
        </form>
    </div>

    <!-- Available Rooms Results -->
    @if (Model.ShowResults)
    {
        @if (Model.AvailableRooms.Any())
        {
            <div class="glassmorphism rounded-xl p-8">
                <h2 class="text-2xl font-bold mb-6 text-white">
                    Available Rooms at @Model.SelectedHotel?.Name
                </h2>
                <p class="text-gray-400 mb-6">
                    @Model.Input.CheckInDate.ToString("MMM dd, yyyy") - @Model.Input.CheckOutDate.ToString("MMM dd, yyyy")
                    (@((Model.Input.CheckOutDate - Model.Input.CheckInDate).Days) nights)
                </p>

                <form method="post" asp-page-handler="Book">
                    <input type="hidden" asp-for="Input.HotelId" />
                    <input type="hidden" asp-for="Input.CheckInDate" />
                    <input type="hidden" asp-for="Input.CheckOutDate" />
                    <input type="hidden" asp-for="Input.NumGuests" />

                    <div class="space-y-4 mb-6">
                        @foreach (var room in Model.AvailableRooms)
                        {
                            <div class="bg-gray-800/50 rounded-lg p-6 flex items-center justify-between">
                                <div class="flex items-center space-x-4">
                                    <input type="checkbox" name="Input.SelectedRoomIds" value="@room.RoomId" class="w-5 h-5 text-indigo-600 rounded focus:ring-2 focus:ring-indigo-500" />
                                    <div>
                                        <h3 class="text-xl font-semibold text-white">Room @room.RoomNumber</h3>
                                        <p class="text-gray-400">@room.RoomType</p>
                                        <p class="text-sm text-gray-500">
                                            Capacity: @(room.Capacity ?? 0) guests • Size: @(room.Size?.ToString("N0") ?? "N/A") m²
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-2xl font-bold text-cyan-400">$@room.RoomPrice</p>
                                    <p class="text-sm text-gray-400">per night</p>
                                    <p class="text-lg font-semibold text-white mt-2">
                                        Total: $@(room.RoomPrice * (Model.Input.CheckOutDate - Model.Input.CheckInDate).Days)
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                    <button type="submit" class="w-full py-3 px-6 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                        Confirm Booking
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="glassmorphism rounded-xl p-12 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-2xl font-bold text-white mb-2">No Rooms Available</h3>
                <p class="text-gray-400">Try different dates or another hotel</p>
            </div>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}