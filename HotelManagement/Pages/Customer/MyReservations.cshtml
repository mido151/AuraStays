@page
@model HotelManagement.Pages.Customer.MyReservationsModel
@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-4xl font-extrabold gradient-text">My Reservations</h1>
        <a asp-page="/Customer/BookRoom" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
            + Book New Room
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500 rounded-lg">
            <p class="text-green-400">@Model.SuccessMessage</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500 rounded-lg">
            <p class="text-red-400">@Model.ErrorMessage</p>
        </div>
    }

    @if (Model.Reservations.Any())
    {
        <div class="space-y-6">
            @foreach (var reservation in Model.Reservations.OrderByDescending(r => r.BookingDate))
            {
                <div class="glassmorphism rounded-xl p-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                        <div>
                            <h3 class="text-2xl font-bold text-white mb-2">
                                @if (reservation.Rooms.Any())
                                {
                                    @reservation.Rooms.First().Hotel.Name
                                }
                            </h3>
                            <p class="text-gray-400">
                                Booking #@reservation.ReservationId • Booked on @reservation.BookingDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="mt-4 md:mt-0">
                            @if (reservation.Status == "Confirmed")
                            {
                                <span class="px-4 py-2 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Confirmed</span>
                            }
                            else if (reservation.Status == "Pending")
                            {
                                <span class="px-4 py-2 bg-yellow-500/10 text-yellow-400 rounded-full text-sm font-medium">Pending</span>
                            }
                            else if (reservation.Status == "Cancelled")
                            {
                                <span class="px-4 py-2 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">Cancelled</span>
                            }
                            else if (reservation.Status == "Completed")
                            {
                                <span class="px-4 py-2 bg-blue-500/10 text-blue-400 rounded-full text-sm font-medium">Completed</span>
                            }
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-4">
                        <div class="bg-gray-800/50 rounded-lg p-4">
                            <p class="text-gray-400 text-sm mb-1">Check-In</p>
                            <p class="text-white font-semibold">@reservation.CheckInDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="bg-gray-800/50 rounded-lg p-4">
                            <p class="text-gray-400 text-sm mb-1">Check-Out</p>
                            <p class="text-white font-semibold">@reservation.CheckOutDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="bg-gray-800/50 rounded-lg p-4">
                            <p class="text-gray-400 text-sm mb-1">Duration</p>
                            <p class="text-white font-semibold">@((reservation.CheckOutDate - reservation.CheckInDate).Days) nights</p>
                        </div>
                    </div>

                    <div class="border-t border-gray-700 pt-4">
                        <p class="text-gray-400 text-sm mb-2">Rooms:</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                            @foreach (var room in reservation.Rooms)
                            {
                                <span class="px-3 py-1 bg-indigo-500/10 text-indigo-400 rounded-lg text-sm">
                                    Room @room.RoomNumber (@room.RoomType)
                                </span>
                            }
                        </div>
                        <p class="text-gray-400 text-sm">Guests: @reservation.NumGuests</p>
                    </div>

                    @if (reservation.Status == "Confirmed" && reservation.CheckInDate > DateTime.Today)
                    {
                        <div class="border-t border-gray-700 pt-4 mt-4">
                            <form method="post" asp-page-handler="Cancel" asp-route-reservationId="@reservation.ReservationId" class="inline">
                                <button type="submit" 
                                        class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors"
                                        onclick="return confirm('Are you sure you want to cancel this reservation?');">
                                    Cancel Reservation
                                </button>
                            </form>
                        </div>
                    }

                    @if (reservation.Status == "Completed")
                    {
                        var hotelId = reservation.Rooms.FirstOrDefault()?.HotelId;
                        @if (hotelId.HasValue)
                        {
                            <div class="border-t border-gray-700 pt-4 mt-4">
                                <a asp-page="/Customer/WriteReview" asp-route-hotelId="@hotelId" 
                                   class="inline-block px-4 py-2 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium rounded-lg hover:opacity-90 transition-all">
                                    Write a Review
                                </a>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="glassmorphism rounded-xl p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">No Reservations Yet</h3>
            <p class="text-gray-400 mb-6">Start planning your next trip!</p>
            <a asp-page="/Customer/BookRoom" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all">
                Book Your First Room
            </a>
        </div>
    }
</div>