@page
@model HotelManagement.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<!-- Hidden data attributes for toast notifications -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div data-error-message="@Model.ErrorMessage" style="display:none;"></div>
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl w-full">
        <div class="glassmorphism rounded-2xl p-8 shadow-2xl">
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">🏨</div>
                <h2 class="text-4xl font-extrabold gradient-text">Create Account</h2>
                <p class="mt-2 text-gray-400">Join AuraStays today</p>
            </div>

            <form method="post" class="space-y-6" id="registerForm">
                <!-- Account Type Selection -->
                <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
                    <label class="block text-sm font-medium text-gray-300 mb-4">
                        I want to register as: <span class="text-red-400">*</span>
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <label class="relative flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-700/30 transition-all"
                               id="customer-option">
                            <input type="radio" 
                                   asp-for="Input.AccountType" 
                                   value="Customer" 
                                   class="w-5 h-5 text-indigo-600"
                                   checked
                                   onchange="toggleHotelFields()" />
                            <div class="ml-4">
                                <div class="flex items-center gap-2">
                                    <span class="text-2xl">👤</span>
                                    <span class="block text-lg font-semibold text-white">Customer</span>
                                </div>
                                <span class="block text-sm text-gray-400 mt-1">Book and review hotels</span>
                            </div>
                        </label>

                        <label class="relative flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-700/30 transition-all"
                               id="hotel-admin-option">
                            <input type="radio" 
                                   asp-for="Input.AccountType" 
                                   value="HotelAdmin" 
                                   class="w-5 h-5 text-indigo-600"
                                   onchange="toggleHotelFields()" />
                            <div class="ml-4">
                                <div class="flex items-center gap-2">
                                    <span class="text-2xl">🏢</span>
                                    <span class="block text-lg font-semibold text-white">Hotel Manager</span>
                                </div>
                                <span class="block text-sm text-gray-400 mt-1">Manage your hotel</span>
                            </div>
                        </label>
                    </div>
                    <span asp-validation-for="Input.AccountType" class="text-red-400 text-sm mt-2 block"></span>
                </div>

                <!-- Basic User Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-300 mb-2">
                            Username <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="Input.Username" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                               placeholder="Choose a username"
                               required />
                        <span asp-validation-for="Input.Username" class="text-red-400 text-sm mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-1">3-50 characters</p>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                            Email <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="Input.Email" 
                               type="email" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                               placeholder="your.email@example.com"
                               required />
                        <span asp-validation-for="Input.Email" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                            Password <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <input asp-for="Input.Password" 
                                   type="password" 
                                   id="password"
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="Create a strong password"
                                   required />
                            <button type="button" onclick="togglePasswordVisibility('password', 'eye-password')" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-300">
                                <svg id="eye-password" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-red-400 text-sm mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-1">Minimum 6 characters</p>
                    </div>

                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
                            Confirm Password <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <input asp-for="Input.ConfirmPassword" 
                                   type="password" 
                                   id="confirmPassword"
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="Re-enter your password"
                                   required />
                            <button type="button" onclick="togglePasswordVisibility('confirmPassword', 'eye-confirm')" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-300">
                                <svg id="eye-confirm" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Hotel Information (shown only for Hotel Managers) -->
                <div id="hotel-fields" class="hidden space-y-6 bg-blue-500/10 border border-blue-500/30 rounded-lg p-6 animate-slideDown">
                    <div class="flex items-center gap-2 mb-4">
                        <span class="text-2xl">🏨</span>
                        <h3 class="text-xl font-bold text-white">Hotel Information</h3>
                    </div>
                    <p class="text-sm text-gray-400 mb-4">⚠️ Your hotel will be pending admin approval before you can access the system.</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.HotelName" class="block text-sm font-medium text-gray-300 mb-2">
                                Hotel Name <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="Input.HotelName" 
                                   type="text" 
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="e.g., Grand Luxury Hotel" />
                            <span asp-validation-for="Input.HotelName" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="Input.HotelCity" class="block text-sm font-medium text-gray-300 mb-2">
                                City <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="Input.HotelCity" 
                                   type="text" 
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="e.g., Paris" />
                            <span asp-validation-for="Input.HotelCity" class="text-red-400 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.HotelCountry" class="block text-sm font-medium text-gray-300 mb-2">
                                Country <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="Input.HotelCountry" 
                                   type="text" 
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="e.g., France" />
                            <span asp-validation-for="Input.HotelCountry" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="Input.HotelPhone" class="block text-sm font-medium text-gray-300 mb-2">
                                Phone
                            </label>
                            <input asp-for="Input.HotelPhone" 
                                   type="tel" 
                                   class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                   placeholder="e.g., +33-1-23-45-67-89" />
                            <span asp-validation-for="Input.HotelPhone" class="text-red-400 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Input.HotelAddress" class="block text-sm font-medium text-gray-300 mb-2">
                            Address <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="Input.HotelAddress" 
                               type="text" 
                               class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                               placeholder="e.g., 123 Main Street" />
                        <span asp-validation-for="Input.HotelAddress" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Input.HotelDescription" class="block text-sm font-medium text-gray-300 mb-2">
                            Description
                        </label>
                        <textarea asp-for="Input.HotelDescription" 
                                  rows="3"
                                  class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white transition-all"
                                  placeholder="Describe your hotel..."></textarea>
                        <span asp-validation-for="Input.HotelDescription" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <button type="submit" 
                        id="submitBtn"
                        class="w-full py-3 px-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-900">
                    Create Account
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-gray-400 text-sm">
                    Already have an account? 
                    <a asp-page="/Account/Login" class="text-indigo-400 hover:text-indigo-300 font-medium transition-colors">Sign in</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleHotelFields() {
            const hotelFields = document.getElementById('hotel-fields');
            const hotelAdminRadio = document.querySelector('input[value="HotelAdmin"]');
            const customerOption = document.getElementById('customer-option');
            const hotelAdminOption = document.getElementById('hotel-admin-option');
            
            if (hotelAdminRadio.checked) {
                hotelFields.classList.remove('hidden');
                hotelAdminOption.classList.add('border-indigo-500', 'bg-indigo-500/10');
                customerOption.classList.remove('border-indigo-500', 'bg-indigo-500/10');
            } else {
                hotelFields.classList.add('hidden');
                customerOption.classList.add('border-indigo-500', 'bg-indigo-500/10');
                hotelAdminOption.classList.remove('border-indigo-500', 'bg-indigo-500/10');
            }
        }
        
        function togglePasswordVisibility(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                `;
            } else {
                input.type = 'password';
                icon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                `;
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleHotelFields();
            
            // Password match validation
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');
            
            confirmPassword.addEventListener('input', function() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity('Passwords do not match');
                } else {
                    confirmPassword.setCustomValidity('');
                }
            });
        });
        
        // Form validation
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                showToast('Passwords do not match!', 'error');
                document.getElementById('confirmPassword').classList.add('input-error');
                return false;
            }
        });
    </script>
}