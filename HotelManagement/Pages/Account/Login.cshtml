@page
@model HotelManagement.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="glassmorphism rounded-2xl p-8 shadow-2xl">
            <div class="text-center mb-8">
                <h2 class="text-4xl font-extrabold gradient-text">Welcome Back</h2>
                <p class="mt-2 text-gray-400">Sign in to your AuraStays account</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mb-4 p-4 bg-red-500/10 border border-red-500 rounded-lg">
                    <p class="text-red-400 text-sm">@Model.ErrorMessage</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="mb-4 p-4 bg-green-500/10 border border-green-500 rounded-lg">
                    <p class="text-green-400 text-sm">@Model.SuccessMessage</p>
                </div>
            }

            <form method="post" class="space-y-6">
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
                    <input asp-for="Input.Username" 
                           type="text" 
                           id="username" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="Enter your username"
                           required />
                    <span asp-validation-for="Input.Username" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                    <input asp-for="Input.Password" 
                           type="password" 
                           id="password" 
                           class="w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white"
                           placeholder="Enter your password"
                           required />
                    <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" 
                               type="checkbox" 
                               id="remember" 
                               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-600 rounded bg-gray-700" />
                        <label for="remember" class="ml-2 block text-sm text-gray-400">Remember me</label>
                    </div>
                </div>

                <button type="submit" 
                        class="w-full py-3 px-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all duration-300 transform hover:scale-105">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-gray-400 text-sm">
                    Don't have an account? 
                    <a asp-page="/Account/Register" class="text-indigo-400 hover:text-indigo-300 font-medium">Sign up</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}