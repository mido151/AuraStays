@page
@model HotelManagement.Pages.AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-8">
            <span class="gradient-text">About Hotel Management System</span>
        </h1>
        
        <div class="glassmorphism rounded-xl p-8 mb-8">
            <h2 class="text-3xl font-bold mb-4 text-white">Welcome to Hotel Management System</h2>
            <p class="text-gray-300 leading-relaxed mb-4">
                AuraStays is your premier destination for discovering and booking luxury accommodations worldwide. 
                We connect discerning travelers with exceptional hotels and resorts that offer unparalleled comfort, 
                service, and experiences.
            </p>
            <p class="text-gray-300 leading-relaxed">
                Our carefully curated collection features properties that meet the highest standards of excellence, 
                ensuring every stay is memorable and exceeds expectations.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card-hover-effect bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-4xl font-bold gradient-text mb-2">500+</div>
                <p class="text-gray-400">Luxury Hotels</p>
            </div>
            <div class="card-hover-effect bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-4xl font-bold gradient-text mb-2">50+</div>
                <p class="text-gray-400">Countries</p>
            </div>
            <div class="card-hover-effect bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-4xl font-bold gradient-text mb-2">100K+</div>
                <p class="text-gray-400">Happy Guests</p>
            </div>
        </div>

        <div class="glassmorphism rounded-xl p-8">
            <h2 class="text-3xl font-bold mb-6 text-white">Why Choose AuraStays?</h2>
            <div class="space-y-4">
                <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-indigo-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <div>
                        <h3 class="text-xl font-semibold text-white mb-1">Handpicked Selection</h3>
                        <p class="text-gray-400">Every property is personally vetted by our team of travel experts.</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-indigo-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <div>
                        <h3 class="text-xl font-semibold text-white mb-1">Best Price Guarantee</h3>
                        <p class="text-gray-400">We ensure you get the best rates available for your chosen dates.</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-indigo-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <div>
                        <h3 class="text-xl font-semibold text-white mb-1">24/7 Support</h3>
                        <p class="text-gray-400">Our concierge team is available around the clock to assist you.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>