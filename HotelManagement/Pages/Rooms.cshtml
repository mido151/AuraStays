@page
@model HotelManagement.Pages.RoomsModel
@{
    ViewData["Title"] = "Rooms";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-4">Our Exquisite Rooms</h1>
    <p class="text-center text-gray-400 mb-10 max-w-2xl mx-auto">Choose your sanctuary. Each room is designed for ultimate comfort and luxury.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @if (Model.Rooms != null && Model.Rooms.Any())
        {
            @foreach (var room in Model.Rooms)
            {
                <div class="card-hover-effect flex flex-col rounded-xl overflow-hidden bg-gray-800 shadow-lg">
                    <img src="@(room.ImageUrl ?? "https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=800")" alt="@room.RoomType" class="w-full h-56 object-cover">
                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="text-2xl font-bold">Room @room.RoomNumber</h3>
                        <p class="text-gray-400 mt-1">@room.RoomType</p>
                        <div class="my-4 flex-grow">
                            <div class="flex items-center text-sm text-gray-300 mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                                </svg>
                                Capacity: @(room.Capacity ?? 2) guests
                            </div>
                            <div class="flex items-center text-sm text-gray-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5v4m0 0h-4" />
                                </svg>
                                Size: @(room.Size?.ToString("N0") ?? "N/A") m²
                            </div>
                        </div>
                        <div class="flex justify-between items-center mt-auto">
                            <span class="text-2xl font-bold text-cyan-400">$@room.RoomPrice.ToString("N2")<span class="text-sm font-normal text-gray-400">/night</span></span>
                            @if (room.RoomStatus == "Available")
                            {
                                <span class="px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">Available</span>
                            }
                            else
                            {
                                <span class="px-3 py-1 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">@room.RoomStatus</span>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-span-full text-center text-gray-400 py-12">
                <p>No rooms available at the moment.</p>
            </div>
        }
    </div>
</div>