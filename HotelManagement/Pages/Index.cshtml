@page
@model HotelManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to AuraStays";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    @if (User.Identity?.IsAuthenticated == true)
    {
        @* Logged in Customer View *@
        <div class="mb-10">
            <h1 class="text-4xl font-extrabold mb-2">
                Welcome back, <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">@User.Identity.Name</span>
            </h1>
            <p class="text-gray-400">Ready for your next adventure?</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">Available Hotels</h3>
                <p class="text-3xl font-bold text-white">@Model.TotalHotels</p>
                <a asp-page="/Hotels" class="text-sm text-indigo-400 hover:underline mt-2 inline-block">Explore Hotels →</a>
            </div>

            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">Total Rooms</h3>
                <p class="text-3xl font-bold text-white">@Model.TotalRooms</p>
                <a asp-page="/Rooms" class="text-sm text-indigo-400 hover:underline mt-2 inline-block">View Rooms →</a>
            </div>

            <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
                <h3 class="text-gray-400 font-medium mb-2">My Reservations</h3>
                <p class="text-3xl font-bold text-green-400">View</p>
                <a asp-page="/Customer/MyReservations" class="text-sm text-indigo-400 hover:underline mt-2 inline-block">Go to Bookings →</a>
            </div>
        </div>

        <div class="text-center mb-8">
            <a asp-page="/Customer/BookRoom" class="inline-block px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white text-lg font-semibold rounded-lg hover:opacity-90 transition-all transform hover:scale-105">
                Book a Room Now
            </a>
        </div>
    }
    else
    {
        @* Guest Landing Page *@
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-extrabold mb-4">
                <span class="gradient-text">Welcome to AuraStays</span>
            </h1>
            <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
                Discover luxury hotels and resorts from around the world. Your perfect stay awaits.
            </p>
            <div class="flex justify-center space-x-4">
                <a asp-page="/Account/Register" class="px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white text-lg font-semibold rounded-lg hover:opacity-90 transition-all transform hover:scale-105">
                    Get Started
                </a>
                <a asp-page="/Hotels" class="px-8 py-4 border-2 border-indigo-500 text-indigo-400 text-lg font-semibold rounded-lg hover:bg-indigo-500 hover:text-white transition-all">
                    Browse Hotels
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            <div class="text-center p-6">
                <div class="text-5xl mb-4">🏨</div>
                <h3 class="text-xl font-bold text-white mb-2">@Model.TotalHotels Hotels</h3>
                <p class="text-gray-400">Luxury properties worldwide</p>
            </div>
            <div class="text-center p-6">
                <div class="text-5xl mb-4">🛏️</div>
                <h3 class="text-xl font-bold text-white mb-2">@Model.TotalRooms Rooms</h3>
                <p class="text-gray-400">Perfect accommodations</p>
            </div>
            <div class="text-center p-6">
                <div class="text-5xl mb-4">⭐</div>
                <h3 class="text-xl font-bold text-white mb-2">5-Star Service</h3>
                <p class="text-gray-400">Exceptional experiences</p>
            </div>
        </div>
    }

    <h2 class="text-3xl font-bold mb-6 text-center">Featured Destinations</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a asp-page="/Hotels" class="group block rounded-xl overflow-hidden bg-gray-800 shadow-lg hover:scale-105 transition-transform">
            <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?w=600" alt="Paris" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="text-xl font-bold text-white group-hover:text-indigo-400 transition-colors">Paris, France</h3>
                <p class="text-gray-400 text-sm">City of Lights</p>
            </div>
        </a>
        <a asp-page="/Hotels" class="group block rounded-xl overflow-hidden bg-gray-800 shadow-lg hover:scale-105 transition-transform">
            <img src="https://images.unsplash.com/photo-1514282401047-d79a71a590e8?w=600" alt="Maldives" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="text-xl font-bold text-white group-hover:text-indigo-400 transition-colors">Maldives</h3>
                <p class="text-gray-400 text-sm">Tropical Paradise</p>
            </div>
        </a>
        <a asp-page="/Hotels" class="group block rounded-xl overflow-hidden bg-gray-800 shadow-lg hover:scale-105 transition-transform">
            <img src="https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=600" alt="Tokyo" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="text-xl font-bold text-white group-hover:text-indigo-400 transition-colors">Kyoto, Japan</h3>
                <p class="text-gray-400 text-sm">Ancient Traditions</p>
            </div>
        </a>
    </div>
</div>