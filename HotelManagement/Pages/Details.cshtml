@page
@model HotelManagement.Pages.DetailsModel
@{
    ViewData["Title"] = Model.Hotel?.Name ?? "Hotel Details";
}

@if (Model.Hotel != null)
{
    <div id="hotel-slideshow" 
         class="slideshow-bg h-[60vh] flex items-center justify-center relative" 
         style="background-image: url('@Model.Hotel.SlideshowImages[0]'); background-size: cover; background-position: center;"
         data-images='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Hotel.SlideshowImages))'>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent"></div>
        <div class="text-center z-10 p-4">
            <h1 class="text-5xl md:text-7xl font-extrabold text-white leading-tight shadow-lg">@Model.Hotel.Name</h1>
            <p class="text-xl text-gray-200 mt-2">The pinnacle of luxury and comfort.</p>
        </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 -mt-20">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <div class="p-8 rounded-xl glassmorphism border-0">
                    <h2 class="text-3xl font-bold mb-4 gradient-text">About the Hotel</h2>
                    <p class="text-gray-300 leading-relaxed">
                        @Model.Hotel.Description
                    </p>
                </div>
                
                <div class="p-8 mt-8 rounded-xl glassmorphism border-0">
                    <h2 class="text-3xl font-bold mb-6 gradient-text">Available Rooms</h2>
                    <div class="space-y-6">
                        @foreach (var room in Model.Hotel.Rooms)
                        {
                            <div class="flex flex-col sm:flex-row items-center justify-between p-4 bg-gray-800/50 rounded-lg">
                                <div>
                                    <h3 class="text-xl font-semibold">@room.Name</h3>
                                    <p class="text-gray-400">@room.BedType, @room.View, @room.Size m²</p>
                                </div>
                                <div class="mt-4 sm:mt-0 text-right">
                                    <p class="text-2xl font-bold text-cyan-400">$@room.PricePerNight<span class="text-sm font-normal text-gray-400">/night</span></p>
                                    <a asp-page="/Rooms" class="text-sm text-indigo-400 hover:underline">View All Rooms →</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="lg:col-span-1">
                <div class="p-8 rounded-xl glassmorphism border-0 sticky top-24">
                    <h2 class="text-3xl font-bold mb-6 gradient-text">Amenities</h2>
                    <div class="grid grid-cols-2 gap-4 text-center">
                        @foreach (var amenity in Model.Hotel.Amenities)
                        {
                            <div class="p-4 bg-gray-800/50 rounded-lg flex flex-col items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mb-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm">@amenity</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
        <h1 class="text-4xl font-bold mb-4">Hotel Not Found</h1>
        <p class="text-gray-400 mb-8">The hotel you're looking for doesn't exist.</p>
        <a asp-page="/Index" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-lg hover:opacity-90">
            Back to Hotels
        </a>
    </div>
}